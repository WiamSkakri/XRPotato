{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2023",
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "jsx": "react-jsx"
  },
  "include": [
    "vite.config.ts",
    "frontend/src/**/*.ts",
    "frontend/src/**/*.tsx"
  ]
}